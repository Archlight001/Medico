<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr Malaki Shakyu"
            android:textColor="@color/cardview_light_background"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/tv_doctorAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_doctorName"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/cardview_light_background"
            android:text="fnfdidfuhufhdfhidfdfiuiuiiiufdpjiodjfdhdfhghuhhhuuhuhhuhuuhhuu"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tv_doctorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doctorAddress"
            android:textColor="@color/cardview_light_background"
            android:text="christopherenok@gmail.com" />

        <TextView
            android:id="@+id/tv_doctorPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doctorEmail"
            android:text="07064411985"
            android:textColor="@color/cardview_light_background"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/tv_doctorMapLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/tv_doctorPhoneNumber"
            android:text="Tap to get Best route to his Address"
            android:textColor="@color/cardview_light_background"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageButton
            android:id="@+id/image_button_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doctorEmail"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimaryDark"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_phone"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>

